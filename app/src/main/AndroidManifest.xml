<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sagar.android_projects.circularreveal">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".CircularRevealWithinActivity"
            android:label="@string/title_activity_circular_reveal_within"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CircularRevealActivityTransition"
            android:label="@string/title_activity_circular_reveal_transition"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".CircularRevealTargetActivity"
            android:label="@string/title_activity_circular_reveal_target"
            android:theme="@style/AppTheme.transparent">
        </activity>
    </application>

</manifest>